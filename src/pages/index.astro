---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import Card_HackReality from '@components/card/Card_HackReality.astro';
import Card_Blue from '@components/card/Card_Blue.astro';
import Card_Red from '@components/card/Card_Red.astro';

const builtWith = [
  { name: 'TBD', url: '#' },
  { name: 'TDB', url: '#' },
  {
    name: 'Figma',
    url: '#',
  },
  { name: 'TDB', url: '#' },
  {
    name: 'TBD',
    url: '#',
  },
];
---

<Layout
  title='Home'
  pageTitle='HackReality'
  description='Brutal is a minimalistic, neobrutalism theme for Astro.'
>
  <main class='bg-[#888787] p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About Brutal</h2>
      <div class='col-span-4'>
        <Card_HackReality>
          <div class='flex flex-col justify-between items-start gap-4 text-center items-center'>
            <p class='mt-2 md:mt-4 outfit text-[1.2rem] md:text-5xl lg:text-7xl text-[#50ed18]'>
              HackReality 
            </p>
            <p class='mt-2 lg:mt-[2.5rem] lg:mb-[2rem] outfit text-xl md:text-3xl lg:text-5xl text-[#ba71ea] mb-4'>
              Empowering Innovation, One Hackathon at a Time
            </p>
            <Button target={'_self'} href='/blog/'>
              Check out the blog &rarr;
            </Button>
          </div>
        </Card_HackReality>
      </div>
      <div class='col-span-2'>
        <Card_Blue>
          <h2 class='md:text-[1.4rem] md:leading-8 text-[1.1rem] lg:text-[2.75rem] lg:leading-[2.75rem] mb-8 dm-serif'>
            Technologies Used in the Hackathon
          </h2>
          <ul class='flex gap-4 flex-wrap bg-[#818cf8]'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card_Blue>
      </div>
      <div class='col-span-2'>
        <Card_Red>
          <h2 class='text-2xl md:text-[1.4rem] md:leading-8 lg:text-5xl mb-4 dm-serif'>
            What is HackReality?
          </h2>
          <p class='poppins lg:flex md:flex sm:hidden'>
            <span class="flex lg:flex md:flex sm:flex">
            HackReality is a hackathon focused on innovation through
            prototyping and Spatial Computing. Participants collaborate 
            for 48 hours <span class="lg:flex md:hidden sm:flex hidden"> to create cutting-edge solutions with access to 
            advanced tools and expert mentorship, both onsite and online. </span>
          </p>
        </Card_Red>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
