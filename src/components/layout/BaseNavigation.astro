---

import Svg from '@components/layout/svg/Svg.astro';

interface Props {
  pageTitle?: string;
}

const navigationItems = [
  { name: 'Home', url: '/' },
  { name: 'NFT', url: '/blog/' },
];

const socialIcons = [
  {
    name: 'GitHub',
    url: '#',
    icon: 'i-uil-github',
  },
  {
    name: 'Twitter',
    url: '#',
    icon: 'i-uil-twitter',
  },
  { name: 'RSS', url: '/feed.xml', icon: 'i-uil-rss' },
];

const { pageTitle } = Astro.props;
---

<header class='border-b-4 border-black flex justify-between p-4 md:p-6 items-center bg-[#424242]'>
  {pageTitle && <h1 class='hidden'>{pageTitle}</h1>}
  <a href='/' title='Back to Home' class="flex text-[#51ed18]">
    <p class='righteous md:text-5xl flex items-center' >
      <Svg></Svg>
      HackReality</p> <!-- HACER SVG IMAGEN EN SVG COMPONENTE -->
  </a>
  <nav class='hidden md:inline-block'>
    <h2 class='hidden'>Navigation</h2>
    <ul class='flex gap-8 poppins'>
      {
        navigationItems.map((item) => (
          <li>
            <a
              class='text-white text-lg font-bold font-lg hover:text-[#00daff] hover:underline transition-all duration-150 ease-in-out'
              href={item.url}
              title={`Go to ${item.name}`}
            >
              {item.name}
            </a>
          </li>
        ))
      }
      {
        socialIcons.map((item) => (
          <li>
            <a
              href={item.url}
              class='hover:text-red text-[#81e77a] hover:underline transition-all duration-150 ease-in-out'
              target='_blank'
              title={`'See @HackReality on ${item.name}`}
            >
              <div class:list={[item.icon, 'w-6 h-6']} />
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <nav class='md:hidden flex'>
    <h2 class='hidden'>Mobile Navigation</h2>
    <ul>
      <li><a href='#' class="color-white mr-4 font-bold">NFT</a></li>
    </ul>
  </nav>
</header>
